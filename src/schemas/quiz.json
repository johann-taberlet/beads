{
  "id": "insurance-discovery-v1",
  "title": "Home & Business Risk Assessment",
  "version": "1.0.0",
  "questions": [
    {
      "id": "q-property-type",
      "text": "What type of property are you insuring?",
      "type": "single-choice",
      "options": [
        {
          "id": "residential",
          "label": "Residential Home",
          "riskScores": {
            "Legal": 0.05
          }
        },
        {
          "id": "commercial",
          "label": "Commercial Building",
          "riskScores": {
            "Fire": 0.1,
            "Legal": 0.15
          }
        },
        {
          "id": "mixed",
          "label": "Mixed Use",
          "riskScores": {
            "Fire": 0.15,
            "Theft": 0.1,
            "Legal": 0.1
          }
        }
      ]
    },
    {
      "id": "q-construction-year",
      "text": "What year was the property built?",
      "type": "number",
      "placeholder": "e.g. 1985"
    },
    {
      "id": "q-recent-renovations",
      "text": "Have there been major renovations in the last 10 years?",
      "description": "Focus on plumbing, electrical, or roofing.",
      "type": "single-choice",
      "options": [
        {
          "id": "yes-full",
          "label": "Yes, full system updates",
          "riskScores": {
            "Fire": -0.15,
            "Natural": -0.1
          }
        },
        {
          "id": "yes-partial",
          "label": "Yes, partial updates",
          "riskScores": {
            "Fire": -0.05
          }
        },
        {
          "id": "no",
          "label": "No major renovations"
        }
      ]
    },
    {
      "id": "q-roof-type",
      "text": "What is your primary roof material?",
      "type": "single-choice",
      "options": [
        {
          "id": "pitched",
          "label": "Pitched Tile/Slate",
          "riskScores": {
            "Fire": -0.05,
            "Natural": -0.1
          }
        },
        {
          "id": "flat",
          "label": "Flat Bitumen",
          "riskScores": {
            "Natural": 0.2,
            "Fire": 0.1
          }
        },
        {
          "id": "metal",
          "label": "Metal",
          "riskScores": {
            "Fire": -0.1,
            "Natural": 0.05
          }
        }
      ]
    },
    {
      "id": "q-heating-source",
      "text": "What is the primary heating source?",
      "type": "single-choice",
      "options": [
        {
          "id": "electric",
          "label": "Electric / Heat Pump",
          "riskScores": {
            "Fire": -0.05
          }
        },
        {
          "id": "gas",
          "label": "Gas Furnace",
          "riskScores": {
            "Fire": 0.05
          }
        },
        {
          "id": "wood",
          "label": "Wood / Pellet Stove",
          "riskScores": {
            "Fire": 0.25
          }
        },
        {
          "id": "oil",
          "label": "Heating Oil",
          "riskScores": {
            "Fire": 0.1,
            "Natural": 0.05
          }
        }
      ]
    },
    {
      "id": "q-occupancy",
      "text": "How is the property primarily occupied?",
      "type": "single-choice",
      "options": [
        {
          "id": "owner",
          "label": "Owner Occupied",
          "riskScores": {
            "Theft": -0.05,
            "Fire": -0.05
          }
        },
        {
          "id": "tenant",
          "label": "Tenant Occupied",
          "riskScores": {
            "Legal": 0.1,
            "Theft": 0.05
          }
        },
        {
          "id": "vacation",
          "label": "Vacation / Short-term Rental",
          "riskScores": {
            "Theft": 0.25,
            "Natural": 0.1,
            "Fire": 0.1
          }
        }
      ]
    },
    {
      "id": "q-security-system",
      "text": "Do you have a monitored security system?",
      "type": "single-choice",
      "options": [
        {
          "id": "yes-monitored",
          "label": "Yes, professionally monitored",
          "riskScores": {
            "Theft": -0.3
          }
        },
        {
          "id": "yes-local",
          "label": "Yes, local alarm only",
          "riskScores": {
            "Theft": -0.15
          }
        },
        {
          "id": "none",
          "label": "No security system",
          "riskScores": {
            "Theft": 0.2
          }
        }
      ]
    },
    {
      "id": "q-proximity-hydrant",
      "text": "Is there a fire hydrant within 500 feet?",
      "type": "single-choice",
      "options": [
        {
          "id": "yes",
          "label": "Yes",
          "riskScores": {
            "Fire": -0.2
          }
        },
        {
          "id": "no",
          "label": "No",
          "riskScores": {
            "Fire": 0.15
          }
        },
        {
          "id": "unsure",
          "label": "I'm not sure"
        }
      ]
    },
    {
      "id": "q-high-value-items",
      "text": "Which high-value items do you own?",
      "description": "Select all that apply",
      "type": "multi-select",
      "options": [
        {
          "id": "jewelry",
          "label": "Jewelry (> $5k)",
          "riskScores": {
            "Theft": 0.2,
            "Legal": 0.05
          }
        },
        {
          "id": "art",
          "label": "Fine Art",
          "riskScores": {
            "Theft": 0.15,
            "Fire": 0.1
          }
        },
        {
          "id": "electronics",
          "label": "High-end Electronics",
          "riskScores": {
            "Theft": 0.1
          }
        },
        {
          "id": "collections",
          "label": "Rare Collections (Stamps, Wine, etc.)",
          "riskScores": {
            "Fire": 0.05,
            "Theft": 0.1
          }
        },
        {
          "id": "none",
          "label": "None of the above"
        }
      ]
    },
    {
      "id": "q-has-dog",
      "text": "Do you own a dog?",
      "type": "single-choice",
      "options": [
        {
          "id": "yes",
          "label": "Yes",
          "riskScores": {
            "Legal": 0.1
          }
        },
        {
          "id": "no",
          "label": "No"
        }
      ]
    },
    {
      "id": "q-dog-breed",
      "text": "What is the primary breed of your dog?",
      "type": "single-choice",
      "logic": {
        "questionId": "q-has-dog",
        "operator": "equals",
        "value": "yes"
      },
      "options": [
        {
          "id": "working",
          "label": "Working/Guard Breed (e.g. German Shepherd, Rottweiler)",
          "riskScores": {
            "Legal": 0.25,
            "Theft": -0.1
          }
        },
        {
          "id": "toy",
          "label": "Toy / Companion Breed",
          "riskScores": {
            "Legal": 0.05
          }
        },
        {
          "id": "other",
          "label": "Other"
        }
      ]
    },
    {
      "id": "q-pool-trampoline",
      "text": "Do you have a swimming pool or trampoline?",
      "type": "multi-select",
      "options": [
        {
          "id": "pool-fenced",
          "label": "Swimming Pool (Fenced)",
          "riskScores": {
            "Legal": 0.15
          }
        },
        {
          "id": "pool-unfenced",
          "label": "Swimming Pool (Unfenced)",
          "riskScores": {
            "Legal": 0.4
          }
        },
        {
          "id": "trampoline",
          "label": "Trampoline",
          "riskScores": {
            "Legal": 0.2
          }
        },
        {
          "id": "none",
          "label": "Neither"
        }
      ]
    },
    {
      "id": "q-business-conducted",
      "text": "Is any business conducted on the premises?",
      "type": "single-choice",
      "options": [
        {
          "id": "yes-clients",
          "label": "Yes, with clients visiting",
          "riskScores": {
            "Legal": 0.2,
            "Cyber": 0.1
          }
        },
        {
          "id": "yes-no-clients",
          "label": "Yes, remote work only",
          "riskScores": {
            "Cyber": 0.15
          }
        },
        {
          "id": "no",
          "label": "No business activity"
        }
      ]
    },
    {
      "id": "q-commercial-details",
      "text": "What is the primary business activity?",
      "type": "single-choice",
      "logic": {
        "and": [
          {
            "questionId": "q-property-type",
            "operator": "equals",
            "value": "commercial"
          },
          {
            "questionId": "q-business-conducted",
            "operator": "contains",
            "value": "yes"
          }
        ]
      },
      "options": [
        {
          "id": "office",
          "label": "Office / Tech",
          "riskScores": {
            "Cyber": 0.2
          }
        },
        {
          "id": "retail",
          "label": "Retail",
          "riskScores": {
            "Theft": 0.1,
            "Cyber": 0.05
          }
        },
        {
          "id": "warehouse",
          "label": "Warehouse",
          "riskScores": {
            "Fire": 0.2,
            "Theft": 0.15
          }
        }
      ]
    },
    {
      "id": "q-coast-distance",
      "text": "How far is the property from the coast?",
      "type": "single-choice",
      "options": [
        {
          "id": "under-1",
          "label": "Under 1 mile",
          "riskScores": {
            "Natural": 0.4
          }
        },
        {
          "id": "1-5",
          "label": "1 - 5 miles",
          "riskScores": {
            "Natural": 0.2
          }
        },
        {
          "id": "over-5",
          "label": "Over 5 miles",
          "riskScores": {
            "Natural": -0.1
          }
        }
      ]
    },
    {
      "id": "q-solar-panels",
      "text": "Does the property have solar panels?",
      "type": "single-choice",
      "options": [
        {
          "id": "yes",
          "label": "Yes",
          "riskScores": {
            "Fire": 0.05,
            "Natural": 0.05
          }
        },
        {
          "id": "no",
          "label": "No"
        }
      ]
    },
    {
      "id": "q-smoke-detectors",
      "text": "Do you have functioning smoke detectors in every room?",
      "type": "single-choice",
      "options": [
        {
          "id": "yes",
          "label": "Yes",
          "riskScores": {
            "Fire": -0.2
          }
        },
        {
          "id": "no",
          "label": "No",
          "riskScores": {
            "Fire": 0.1
          }
        }
      ]
    },
    {
      "id": "q-prior-claims",
      "text": "Have you had any insurance claims in the last 5 years?",
      "type": "single-choice",
      "options": [
        {
          "id": "none",
          "label": "No prior claims",
          "riskScores": {
            "Fire": -0.05,
            "Theft": -0.05,
            "Legal": -0.05,
            "Natural": -0.05
          }
        },
        {
          "id": "1",
          "label": "1 claim"
        },
        {
          "id": "2-plus",
          "label": "2 or more claims",
          "riskScores": {
            "Fire": 0.1,
            "Theft": 0.1,
            "Legal": 0.1,
            "Natural": 0.1
          }
        }
      ]
    }
  ]
}
